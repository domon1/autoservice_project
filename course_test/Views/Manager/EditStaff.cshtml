@model DataLayer.Entityes.Staff
@{
}
<h1>Edit Service</h1>
<form asp-action="EditStaff" asp-controller="Manager" asp-route-StaffId="@Model.StaffId" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" name="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="text" name="surname" value="@Model.Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Specialization">Specialization</label>
        <input asp-for="Specialization" type="text" name="specialization" value="@Model.Specialization" />
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Save" class="btn btn-default" />
    </div>
</form>
