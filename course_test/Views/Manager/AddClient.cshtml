@model DataLayer.Entityes.Customer
@{
}
<h1>Add Client</h1>
<form asp-action="AddClient" asp-controller="Manager" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" name="name"/>
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="text" name="surname" />
    </div>
    <div class="form-group">
        <label asp-for="Patrionomic">Patrionomic</label>
        <input asp-for="Patrionomic" type="text" name="patrionomic" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" type="text" name="phonenumber" />
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Send" class="btn btn-default" />
    </div>
</form>
