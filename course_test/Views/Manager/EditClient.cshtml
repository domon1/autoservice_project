@model DataLayer.Entityes.Customer
@{
    ViewData["Title"] = "Edit client";
}
<h1>Edit Client</h1>
<form asp-action="EditClient" asp-controller="Manager" asp-route-CustomerId="@Model.CustomerId" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" name="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label asp-for="Surname">Surname</label>
        <input asp-for="Surname" type="text" name="surname" value="@Model.Surname" />
    </div>
    <div class="form-group">
        <label asp-for="Patrionomic">Patrionomic</label>
        <input asp-for="Patrionomic" type="text" name="patrionomic" value="@Model.Patrionomic" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" type="text" name="phonenumber" value="@Model.PhoneNumber" />
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Save" class="btn btn-default" />
    </div>
</form>
