@model DataLayer.Entityes.Sparepart
@{
}
<h1>Edit Sparepart</h1>
<form asp-action="EditSparepart" asp-controller="Manager" asp-route-SparepartId="@Model.SparepartId" method="post">
    <div class="form-group">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" type="text" name="category" value="@Model.Category">
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" name="name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" name="price" value="@Model.Price" />
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Save" class="btn btn-default" />
    </div>
</form>
