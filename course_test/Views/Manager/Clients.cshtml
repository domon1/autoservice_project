@model IEnumerable<DataLayer.Entityes.Customer>
<h1>Clients</h1>
<div>
    <table class="table">
        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Surname</td>
            <td>Patrionomic</td>
            <td>PhoneNumber</td>
            <td></td>
        </tr>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.CustomerId</td>
                <td>@service.Name</td>
                <td>@service.Surname</td>
                <td>@service.Patrionomic</td>
                <td>@service.PhoneNumber</td>
                <td>
                    <a asp-action="EditClient" asp-controller="Manager" asp-route-id="@service.CustomerId">Edit</a> |
                    <a asp-action="DeleteClient" asp-controller="Manager" asp-route-id="@service.CustomerId">Delete</a>
                </td>
            </tr>
        }
    </table>
    <input type="button" value="Add Client" onclick='window.location = "@Url.Action("AddClient", "Manager")";' />
</div>
