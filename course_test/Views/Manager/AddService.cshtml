@model DataLayer.Entityes.CarService
@{
}
<h1>Add Service</h1>
<form asp-action="AddService" asp-controller="Manager" method="post">
    <div class="form-group">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" type="text" name="category">
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" name="name" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" type="number" name="price" />
    </div>
    <div class="form-group">
        <label asp-for="Duration">Duration</label>
        <input asp-for="Duration" type="number" name="duration" />
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Send" class="btn btn-default" />
    </div>
</form>