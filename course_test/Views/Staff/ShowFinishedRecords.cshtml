@{
    ViewData["Title"] = "Records";
}
@model IEnumerable<DataLayer.Entityes.Order>

<h1>Records</h1>
<div>
    <table class="table">
        <tr>
            <td>Id</td>
            <td>Car</td>
            <td>Service</td>
            <td>Date</td>
            <td>Time</td>
            <td>Price</td>
        </tr>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.OrderId</td>
                <td>@service.Car.LicencePlate</td>
                <td>@service.CarService.Name</td>
                <td>@service.Date</td>
                <td>@service.TimeOrder.TimeValue</td>
                <td>@service.TotalPrice</td>
            </tr>
        }
    </table>
</div>
