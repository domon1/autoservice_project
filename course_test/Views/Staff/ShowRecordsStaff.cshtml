@{
}
@model IEnumerable<DataLayer.Entityes.Order>

<h1>Records</h1>
<div>
    <table class="table">
        <tr>
            <td>Id</td>
            <td>Car</td>
            <td>Service</td>
            <td>Date</td>
            <td>Time</td>
            <td></td>
        </tr>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.OrderId</td>
                <td>@service.CarId</td>
                <td>@service.CarId</td>
                <td>@service.Date</td>
                <td>@service.TimeOrderId</td>
                <td>
                    <a asp-action="SendOnCheck" asp-controller="Staff" asp-route-orderId="@service.OrderId" asp-route-staffId="@ViewBag.id">Send on check</a>
                </td>
            </tr>
        }
    </table>
</div>
