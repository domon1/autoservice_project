@model DataLayer.Entityes.Staff
@{
    ViewData["Title"] = "Staff area";
}
<div>
    <h1>Staff Profile</h1>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>Surname</dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt>Specialization</dt>
        <dd>
            @Html.DisplayFor(model => model.Specialization)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Specialization == "Мастер")
    {
        <div>
            <a asp-action="InputDate" asp-controller="Staff">Records</a>
            <a asp-action="ShowUncheckedRecords" asp-controller="Staff">Unchecked records</a>
        </div>
    }
    else
    {
        <div>
            <a asp-action="InputDateStaff" asp-controller="Staff" asp-route-id="@Model.StaffId">Records</a>
            <a asp-action="ShowFinishedRecords" asp-controller="Staff" asp-route-id="@Model.StaffId">Finished</a>
        </div>
    }
</div>
